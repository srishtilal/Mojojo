<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="10dp">

    <!--<android.support.v7.widget.CardView
        android:id="@+id/card_view_people"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:foreground="?selectableItemBackground">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <main.java.cz2006project.mojojo.CircularImageView
                android:id="@+id/people_userimg"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="14dp"
                android:layout_weight="0.35"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_gravity="center_vertical|center|center_horizontal"
                android:src="@drawable/com_facebook_profile_picture_blank_portrait"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/doctor_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1.5"
                    android:text="Name"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/doctor_clinic"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.25"
                    android:ellipsize="end"
                    android:ems="3"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Institute"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/doctor_qualifications"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.25"
                    android:ellipsize="end"
                    android:ems="3"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Qualification"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />




            </LinearLayout>


            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="8dp"
                android:layout_weight="0.12"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="0.475"
                    android:background="@drawable/location"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/doctor_area"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Status"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>
    <!--</android.support.v7.widget.CardView>-->

</LinearLayout>