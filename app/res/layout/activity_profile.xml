<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="main.java.cz2006project.mojojo.Entity.Profile"
    android:id="@+id/nlnlk">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/l1"
            android:padding="10dp"
            android:paddingLeft="40dp"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Welcome"
                android:id="@+id/Welcome"
                android:textColor="#c0484a"
                android:layout_weight="1"
                android:textSize="50dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:id="@+id/l2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Upcoming Appointment:"
                android:id="@+id/Upcoming_Appoint"
                android:layout_weight="1"
                android:textSize="30dp"
                android:textAlignment="gravity" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <ListView
                android:layout_width="fill_parent"
                android:layout_height="253dp"
                android:id="@+id/listView"
                android:layout_below="@+id/linearLayout2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingLeft="140dp"
                android:headerDividersEnabled="false"
                android:footerDividersEnabled="false"
                android:choiceMode="singleChoice"
                android:paddingRight="140dp" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consult A Doctor"
        android:id="@+id/ConsultADoctor"
        android:gravity="right"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Appointment Records"
        android:id="@+id/CheckAppointRecords"
        android:gravity="right"
        android:layout_below="@+id/ConsultADoctor"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book More Appointments"
        android:id="@+id/Book_More_Appointments"
        android:layout_below="@+id/CheckAppointRecords"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:id="@+id/About_Us"
        android:layout_below="@+id/Book_More_Appointments"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View My Records"
        android:id="@+id/View_My_Records"
        android:layout_below="@+id/About_Us"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
